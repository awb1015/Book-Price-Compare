{
  "manifest_version": 2,

  "name": "Book Price Compare",
  "description": "This extensions will compare prices of books across markets places",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
 "content_scripts": [
  {
    "matches": ["*://amazon.com/*", "*://amazon.co.uk/*"],
    "js": ["content.js"]
  }
 ]
 
}
